<%- include('partials/header', { title: 'Profile' }) %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3 class="mb-0">
            <i class="fas fa-user me-2"></i>User Profile
          </h3>
        </div>
        
        <div class="card-body">
          <%- include('partials/alerts') %>
          
          <div class="row">
            <div class="col-md-4 text-center">
              <div class="mb-3">
                <i class="fas fa-user-circle fa-5x text-primary"></i>
              </div>
            </div>
            
            <div class="col-md-8">
              <h4 class="mb-3">Profile Information</h4>
              
              <div class="mb-3">
                <label class="form-label fw-bold">Full Name</label>
                <p class="form-control-plaintext border p-2 bg-light">
                  <i class="fas fa-user me-2"></i><%= user.name %>
                </p>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-bold">Email Address</label>
                <p class="form-control-plaintext border p-2 bg-light">
                  <i class="fas fa-envelope me-2"></i><%= user.email %>
                </p>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-bold">Account Type</label>
                <p class="form-control-plaintext border p-2 bg-light">
                  <% if (user.googleId) { %>
                    <i class="fab fa-google me-2 text-danger"></i>Google Account
                  <% } else { %>
                    <i class="fas fa-key me-2 text-primary"></i>Local Account
                  <% } %>
                </p>
              </div>
              
              <div class="mb-3">
                <label class="form-label fw-bold">Member Since</label>
                <p class="form-control-plaintext border p-2 bg-light">
                  <i class="fas fa-calendar-alt me-2"></i>
                  <%= new Date(user.createdAt || user._id.getTimestamp()).toLocaleDateString() %>
                </p>
              </div>
            </div>
          </div>
          
          <hr>
          
          <div class="row">
            <div class="col-md-12">
              <h5>Quick Actions</h5>
              <div class="d-grid gap-2 d-md-flex">
                <a href="/dashboard" class="btn btn-primary">
                  <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                </a>
                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                  <i class="fas fa-edit me-2"></i>Edit Profile
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Edit Profile</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <form action="/users/profile" method="POST">
        <div class="modal-body">
          <div class="mb-3">
            <label for="name" class="form-label">
              <i class="fas fa-user me-2"></i>Full Name
            </label>
            <input type="text" class="form-control" id="name" name="name" 
                   value="<%= user.name %>" required>
          </div>
          <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Note:</strong> Email address cannot be changed for security reasons.
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="fas fa-times me-2"></i>Cancel
          </button>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save me-2"></i>Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>